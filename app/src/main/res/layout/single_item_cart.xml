                android:id="@+id/tv_cart_single_item_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coresans_cr_medium"
                android:maxLines="2"
                android:padding="2dp"
                android:text="Fan Repair"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_cart_single_item_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coresans_cr_medium"
                android:padding="2dp"
                android:text="Rate: Rs 20"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/tv_cart_single_item_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:padding="2dp"
                android:src="@drawable/ic_delete" />

        </LinearLayout>


    </LinearLayout>


