        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_single_cart_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_teamwork" />

        <LinearLayout
