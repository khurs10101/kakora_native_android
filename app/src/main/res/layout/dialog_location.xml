<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_google_forms" />

    <TextView
        android:id="@+id/tv_dialog_location_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/coresans_cr_medium"
        android:text="Somthing went wrong!"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_dialog_location_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_outline"
        android:padding="8dp"
        android:text="Select other location"
        android:textColor="@color/colorPrimary" />


    <Button
        android:id="@+id/bt_dialog_location_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_outline"
        android:text="Exit"
        android:textColor="@color/colorPrimary" />


</LinearLayout>